<node>
  <interface name="com.canonical.applications.ApplicationDownload">

    <method name="start" />
    <method name="pause" />
    <method name="resume" />
    <method name="cancel" />

    <signal name="started">
        <arg name="success" type="b" direction="out"/>
    </signal>

    <signal name="paused">
        <arg name="success" type="b" direction="out"/>
    </signal>

    <signal name="resumed">
        <arg name="success" type="b" direction="out"/>
    </signal>

    <signal name="canceled">
        <arg name="success" type="b" direction="out"/>
    </signal>

    <signal name="finished" />

    <signal name="error">
        <arg name="error" type="s" direction="out"/>
    </signal>

    <signal name="progress">
        <arg name="received" type="u" direction="out"/>
        <arg name="total" type="u" direction="out"/>
    </signal>

 </interface>
</node>
